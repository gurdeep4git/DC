doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title DC | Login
    link(rel='stylesheet', type='text/css', href='css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='css/style.css')
    link(rel='stylesheet', type='text/less', href='css/style.less')
    link(rel='stylesheet', type='text/css', href='css/responsive.css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    include includes/_header.jade
    main#login-section
      .container
        .row
          .col-xs-12
            h2 Account login
            p Please enter your username and password.
            div.form-block
              form
                .form-group
                  input(type="text", class="form-control" ,placeholder="Username")
                .form-group
                  input(type="password", class="form-control" ,placeholder="Password")
                a.btn.btn-default.btn-login(href="selections.html") Login
            p.note 
              | If you have forgotten your password or would like new account access, please email 
              a(href="mailto:info@decisioncraft.com.au") info@decisioncraft.com.au

    include includes/_footerfixed.jade

    script(src='js/jquery-1.12.0.js')
    script(src='js/bootstrap.js')
    script(src='js/less.js')
    